# CodeWise RAG服务环境变量配置示例

# 服务配置
APP_NAME="CodeWise RAG Service"
DEBUG=True
HOST=127.0.0.1
PORT=8000

# 路径配置
# PROJECT_ROOT=/path/to/CodeWise
# PARSER_OUTPUT_DIR=/path/to/CodeWise/parser/output
# CHROMA_DB_PATH=/path/to/CodeWise/db
# MODELS_DIR=/path/to/CodeWise/models

# 嵌入模型配置
EMBEDDING_MODEL_NAME=BAAI/bge-m3
# EMBEDDING_MODEL_PATH=/path/to/local/model
EMBEDDING_DIMENSION=1024
MAX_SEQ_LENGTH=8192

# ChromaDB配置
CHROMA_COLLECTION_NAME=codewise_knowledge_graph
CHROMA_DISTANCE_FUNCTION=cosine

# 数据处理配置
BATCH_SIZE=32
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# 搜索配置
DEFAULT_TOP_K=10
SIMILARITY_THRESHOLD=0.7