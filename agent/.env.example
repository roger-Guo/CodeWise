# CodeWise Agent服务环境变量配置示例

# 服务配置
APP_NAME="CodeWise Agent Service"
DEBUG=True
HOST=127.0.0.1
PORT=8001

# RAG服务配置
RAG_SERVICE_URL=http://127.0.0.1:8000
RAG_API_BASE=http://127.0.0.1:8000/api/v1

# Ollama配置
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL_NAME=deepseek-coder-v2
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# LangGraph工作流配置
MAX_ITERATIONS=10
MAX_CONTEXT_LENGTH=16000
SIMILARITY_THRESHOLD=0.7

# 检索配置
INITIAL_SEARCH_TOP_K=5
DEPENDENCY_SEARCH_TOP_K=3
MAX_DEPENDENCIES_PER_FILE=5

# 上下文管理
MAX_VISITED_FILES=20
CONTEXT_WINDOW_SIZE=8000

# 调用链配置
MAX_CALL_CHAIN_DEPTH=8
TRACK_BACKWARD_REFERENCES=True
TRACK_FORWARD_REFERENCES=True

# 缓存配置
ENABLE_CACHING=True
CACHE_TTL=3600